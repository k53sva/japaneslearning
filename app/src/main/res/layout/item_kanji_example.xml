<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="example"
            type="com.melody.education.model.Examples" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_kanji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:layout_weight="6"
                android:text="@{example.Kanji}" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/dimen_5dp"
                android:onClick="@{(view) -> example.playAudio(view)}"
                android:src="@drawable/playlistcore_ic_play_arrow_black"
                android:visibility="@{example.isSound ? View.VISIBLE : View.GONE}" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:text="@{example.Romaji}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:text="@{example.Translate}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:background="@android:color/holo_purple"
            android:paddingLeft="@dimen/dimen_5dp"
            android:text="@{example.KanjiLook}" />

    </LinearLayout>
</layout>